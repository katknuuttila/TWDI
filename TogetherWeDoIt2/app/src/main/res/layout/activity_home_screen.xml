<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/twdiandr3"
        android:scaleType="centerCrop"
        android:background="@android:color/transparent"
        android:layout_margin="8dp"
        android:id="@+id/logo_button"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tuleva"
        android:textSize="22sp"
        android:background="@android:color/transparent"
        android:fontFamily="casual"
        android:textAllCaps="false"
        android:layout_toRightOf="@id/logo_button"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:id="@+id/info_button"/>

    <ImageButton
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="16dp"
        android:layout_marginRight="9dp"
        android:layout_marginLeft="9dp"
        android:layout_marginBottom="9dp"
        android:id="@+id/settings"
        android:src="@drawable/baseline_more_vert_black_48dp"
        android:background="@android:color/transparent"
        android:layout_alignParentRight="true"
        android:tint="#34515e"/>

    <ImageButton
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:scaleType="centerCrop"
        android:layout_toLeftOf="@id/settings"
        android:layout_marginTop="16dp"
        android:layout_marginRight="9dp"
        android:layout_marginLeft="9dp"
        android:layout_marginBottom="9dp"
        android:id="@+id/profile_button"
        android:src="@drawable/twotone_account_circle_black_48dp"
        android:background="@android:color/transparent"
        android:tint="#34515e"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@id/info_button"
        android:background="#607d8b"
        android:id="@+id/divider_title"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/divider_title"
        android:background="#8eacbb"
        android:id="@+id/divider_maps"/>


</RelativeLayout>