<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/twdiandr3"
        android:scaleType="centerCrop"
        android:background="@android:color/transparent"
        android:layout_margin="8dp"
        android:id="@+id/logo_button"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tuleva"
        android:textSize="22sp"
        android:background="@android:color/transparent"
        android:fontFamily="casual"
        android:textAllCaps="false"
        android:layout_toRightOf="@id/logo_button"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:id="@+id/info_button"/>

    <ImageButton
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="16dp"
        android:layout_marginRight="9dp"
        android:layout_marginLeft="9dp"
        android:layout_marginBottom="9dp"
        android:id="@+id/settings"
        android:src="@drawable/baseline_more_vert_black_48dp"
        android:background="@android:color/transparent"
        android:layout_alignParentRight="true"
        android:tint="#34515e"/>

    <ImageButton
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:scaleType="centerCrop"
        android:layout_toLeftOf="@id/settings"
        android:layout_marginTop="16dp"
        android:layout_marginRight="9dp"
        android:layout_marginLeft="9dp"
        android:layout_marginBottom="9dp"
        android:id="@+id/profile_button"
        android:src="@drawable/twotone_account_circle_black_48dp"
        android:background="@android:color/transparent"
        android:tint="#34515e"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@id/info_button"
        android:background="#607d8b"
        android:id="@+id/divider_title"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/divider_title">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/divider_maps"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#d7ccc8" />
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/twotone_map_black_48dp"
                    android:background="@android:color/transparent"
                    android:tint="#607d8b"
                    android:id="@+id/maps_picture_button"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="8dp"/>

                <Button
                    android:id="@+id/maps_text_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-22dp"
                    android:layout_marginTop="12dp"
                    android:layout_toRightOf="@id/maps_picture_button"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/osclightitallic"
                    android:text="Maps"
                    android:textAllCaps="false"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/description_maps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/maps_text_button"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_toRightOf="@id/maps_picture_button"
                    android:fontFamily="@font/osc"
                    android:text="Description:"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/description_maps"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="2dp"
                    android:layout_toRightOf="@id/maps_picture_button"
                    android:fontFamily="@font/osc"
                    android:text="Are you looking for secondhand shops, local markets or recycling stations? Select one of the options below to find what's closest to you."
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#607d8b" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#dcedc8"
                    android:id="@+id/seasonal_food"/>

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#607d8b" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#8aacc8"
                    android:id="@+id/events"/>


            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#607d8b"/>

        </LinearLayout>


</RelativeLayout>